<h1>Make an Post</h1>
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<h2>Make a Comment</h2>
<%= form_for [@article, @comment] do |f| %>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>

<h2>Comments</h2>
<% @article.new_first_comments.each do |comms| %>
  <strong>Body :</strong>
  <%= comms.body %> <br />
    <% end %>
<%= link_to 'Back', articles_path %>
